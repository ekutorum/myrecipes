<%= render 'shared/errors', obj: @recipe %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |fo| %>
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :name %>
       </div>
       <div class="col-md-8">
         <%= fo.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
       </div>
     </div>
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :description %>
       </div>
       <div class="col-md-8">
         <%= fo.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
       </div>
     </div>
     <div class="form-group">
       <div class="col-md-offset-2 col-md-10">
         <%= fo.submit class: "btn btn-primary btn-lg btn-xlarge" %>
       </div>
     </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      [ <%= link_to "Cancel request and return to recipe listing", recipes_path %> ]
    </div>
  </div>
</div>