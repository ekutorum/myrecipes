<%= render 'shared/page_title', title: "Sign up for the application" %>

<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |fo| %>
    
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :chefname, "Name" %>
       </div>
       <div class="col-md-8">
         <%= fo.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
       </div>
     </div>
     
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :email %>
       </div>
       <div class="col-md-8">
         <%= fo.email_field :email, class: "form-control", placeholder: "Enter your email" %>
       </div>
     </div>
     
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :password %>
       </div>
       <div class="col-md-8">
         <%= fo.password_field :password, class: "form-control", placeholder: "Choose a password" %>
       </div>
     </div>
     
     <div class="form-group">
       <div class="control-label col-md-2">
         <%= fo.label :password_confirmation, "Confirm Password" %>
       </div>
       <div class="col-md-8">
         <%= fo.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
       </div>
     </div>
     
     <div class="form-group">
       <div class="col-md-offset-2 col-md-10">
         <%= fo.submit "Create my account", class: "btn btn-primary btn-lg btn-xlarge" %>
       </div>
     </div>
    
    <% end %>
    
    <div class="col-md-4 col-md-offset-4">
      [ <%= link_to "Cancel request and return to recipe listing", recipes_path %> ]
    </div>
  
  </div>
</div>